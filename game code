    <title>Apocalypse Tic-Tac-Toe</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Courier New', monospace;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background: linear-gradient(to bottom, 
                #4a0000 0%, #2c0000 50%, 
                #1e3c1a 50%, #2d5a27 100%);
            color: white;
        }

        .army-row {
            display: grid;
            grid-template-columns: repeat(10, 1fr);
            gap: 10px;
            width: 90%;
            z-index: 2;
            padding: 10px;
            justify-items: center;
            position: absolute;
        }

        #zombie-army { top: 20px; }
        
        /* Humans moved down one "line" (closer to the bottom) */
        #human-army { bottom: 20px; }

        .unit { font-size: 30px; transition: transform 0.8s cubic-bezier(0.6, -0.28, 0.735, 0.045); }
        
        #game-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 10;
            /* Shifted the entire game board up */
            margin-top: -80px;
        }

        #status {
            background: rgba(0,0,0,0.8);
            padding: 10px 30px;
            border-radius: 50px;
            margin-bottom: 25px;
            text-transform: uppercase;
            border: 2px solid #444;
            font-size: 1.3rem;
            letter-spacing: 2px;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(3, 100px);
            grid-template-rows: repeat(3, 100px);
        }

        .cell {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 60px;
            cursor: pointer;
        }

        .cell:nth-child(3n+1), .cell:nth-child(3n+2) { border-right: 4px solid white; }
        .cell:nth-child(1), .cell:nth-child(2), .cell:nth-child(3),
        .cell:nth-child(4), .cell:nth-child(5), .cell:nth-child(6) { border-bottom: 4px solid white; }

        #blood-overlay {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 0%;
            background: rgba(138, 3, 3, 0.9);
            z-index: 100;
            transition: height 3s ease-in;
            pointer-events: none;
        }

        .firecracker {
            position: absolute;
