<body>

    <div id="blood-overlay"></div>
    <div id="msg" class="final-msg"></div>

    <div id="zombie-army" class="army-row"></div>

    <div id="game-container">
        <h2 id="status">Zombies' Turn</h2>
        <div class="grid" id="board">
            <div class="cell" data-index="0"></div>
            <div class="cell" data-index="1"></div>
            <div class="cell" data-index="2"></div>
            <div class="cell" data-index="3"></div>
            <div class="cell" data-index="4"></div>
            <div class="cell" data-index="5"></div>
            <div class="cell" data-index="6"></div>
            <div class="cell" data-index="7"></div>
            <div class="cell" data-index="8"></div>
        </div>
    </div>

    <div id="human-army" class="army-row"></div>

<script>
    const cells = document.querySelectorAll('.cell');
    const statusTxt = document.getElementById('status');
    const zombieArmy = document.getElementById('zombie-army');
    const humanArmy = document.getElementById('human-army');
    const blood = document.getElementById('blood-overlay');
    const msg = document.getElementById('msg');

    let currentPlayer = 'üßü'; 
    let gameState = ["", "", "", "", "", "", "", "", ""];
    let gameActive = true;

    for(let i=0; i<30; i++) {
        zombieArmy.innerHTML += `<div class="unit zombie">üßü</div>`;
        humanArmy.innerHTML += `<div class="unit human">üë®‚Äçüåæ</div>`;
    }

    const winConditions = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];

    function handleCellClick(e) {
        const index = e.target.getAttribute('data-index');
        if (gameState[index] !== "" || !gameActive) return;
        gameState[index] = currentPlayer;
        e.target.innerText = currentPlayer;
        checkResult();
    }

    function checkResult() {
        let roundWon = false;
        for (let condition of winConditions) {
            if (gameState[condition[0]] === gameState[condition[1]] && 
                gameState[condition[1]] === gameState[condition[2]] && 
                gameState[condition[0]] !== "") {
                roundWon = true;
                break;
            }
        }

        if (roundWon) {
            gameActive = false;
            currentPlayer === 'üßü' ? triggerZombieWin() : triggerHumanWin();
            return;
        }

        if (!gameState.includes("")) {
            statusTxt.innerText = "Apocalypse Stalled";
            return;
        }

        currentPlayer = currentPlayer === 'üßü' ? 'üë®‚Äçüåæ' : 'üßü';
        statusTxt.innerText = `${currentPlayer === 'üßü' ? "Zombies'" : "Humans'"} Turn`;
    }

    function triggerZombieWin() {
        statusTxt.innerText = "EXTINCTION!";
        document.querySelectorAll('.zombie').forEach((z, i) => {
            setTimeout(() => { z.style.transform = `translateY(${window.innerHeight * 0.4}px) rotate(720deg)`; }, i * 30);
        });
        setTimeout(() => {
            blood.style.height = "100%";
            msg.innerHTML = "HUMANS DEVOURED<br><span style='font-size:20px'>The World is Dead</span>";
            msg.style.display = "block";
            msg.style.color = "red";
        }, 1200);
    }

    function triggerHumanWin() {
        statusTxt.innerText = "VICTORY!";
        document.querySelectorAll('.human').forEach((h, i) => {
            setTimeout(() => {
                h.innerText = "ü™ì";
                h.style.transform = `translateY(-${window.innerHeight * 0.6}px)`;
            }, i * 30);
        });
        setTimeout(() => {
            msg.innerHTML = "HUMANS WON! üéâ<br><span style='font-size:20px'>Safe for another day!</span>";
            msg.style.display = "block";
            msg.style.color = "#4eff4e";
            createFirecrackers();
        }, 1200);
    }

    function createFirecrackers() {
        for(let i=0; i<30; i++) {
            setTimeout(() => {
                const f = document.createElement('div');
                f.className = 'firecracker';
                f.innerText = ['‚ú®', 'üéÜ', 'üß®', 'üéâ'][Math.floor(Math.random()*4)];
                f.style.left = Math.random() * 100 + 'vw';
                f.style.top = Math.random() * 100 + 'vh';
                document.body.appendChild(f);
            }, i * 100);
        }
    }

    cells.forEach(cell => cell.addEventListener('click', handleCellClick));
</script>
</body>
</html>
