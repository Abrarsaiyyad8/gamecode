        <button class="start-btn" onclick="startGame()">Start Game</button>

        <div class="mode-container">
            <button class="mode-btn active" id="single-player" onclick="setMode('single')">Single Player</button>
            <button class="mode-btn" id="double-player" onclick="setMode('double')">Double Player</button>
        </div>
    </div>

    <script>
        // Generate drips from the title words
        function createTitleBlood() {
            const container = document.getElementById('blood-container');
            const title = document.getElementById('main-title');
            const rect = title.getBoundingClientRect();
            
            // Number of drips to create
            const dripCount = 15;

            for (let i = 0; i < dripCount; i++) {
                const drip = document.createElement('div');
                drip.className = 'blood-drip';
                
                // Random position across the width of the title
                const randomX = rect.left + (Math.random() * rect.width);
                const randomSpeed = 8 + (Math.random() * 10); // 8s to 18s
                const randomDelay = Math.random() * 5; // Start within 5s

                drip.style.left = `${randomX}px`;
                drip.style.setProperty('--speed', `${randomSpeed}s`);
                drip.style.setProperty('--delay', `${randomDelay}s`);
                
                // Randomize drip width slightly
                drip.style.width = `${2 + Math.random() * 4}px`;

                container.appendChild(drip);
            }
        }

        // Initialize blood on load
        window.onload = createTitleBlood;

        let selectedMode = 'single';

        function setMode(mode) {
            selectedMode = mode;
            document.getElementById('single-player').classList.remove('active');
            document.getElementById('double-player').classList.remove('active');
            
            if(mode === 'single') {
                document.getElementById('single-player').classList.add('active');
            } else {
                document.getElementById('double-player').classList.add('active');
            }
        }

        function startGame() {
            const startBtn = document.querySelector('.start-btn');
            const modeBtns = document.querySelectorAll('.mode-btn');
            
            startBtn.innerHTML = "DEPLOYING...";
            startBtn.style.background = "white";
            startBtn.style.color = "#8a0303";
            startBtn.style.pointerEvents = "none";

            modeBtns.forEach(btn => {
                btn.style.opacity = "0.5";
                btn.style.pointerEvents = "none";
            });

            document.querySelector('.zombies').style.transform = "translateX(-100%)";
            document.querySelector('.soldiers').style.transform = "translateX(100%)";
            
            setTimeout(() => {
                const modeName = selectedMode === 'single' ? "Single Player" : "Double Player";
                alert(`The Battle Begins! Mode: ${modeName}`);
            }, 800);
        }
    </script>
